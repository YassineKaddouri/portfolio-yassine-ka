{% block title %}  {% endblock %}
  {% block stylesheets %}
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

  {% endblock %}

{% block body %}
    <style>
        body{
            background-image:url("uploads/images/lo.jpg");
            background-position: center center;
            background-size: cover;
            /*width: 100%;*/
        }

    </style>
    <div class="container-fluid col-sm-8" >


    </div>
    <div class="container p-3 my-2 border  col-lg-5">
        <form method="post"  autocomplete="off">
            <h1><p class="font-italic" style="text-align: center">Inscrivez vous sur notre site</p></h1>
            <hr class="bg-dark">
            {{ form_start(form) }}
            {{ form_row(form.email ,{'attr':{'placeholder':'email'}})  }}
            {{ form_row(form.username, {'label':'Nom d\'utilisateur','attr':{'placeholder':'username'}}) }}
            {{ form_row(form.password ,{'attr':{'placeholder':'password'}}) }}
            {{ form_row(form.confirm_password ,{'attr':{'placeholder':'Repeter votre password'}}) }}
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success ">Inscription</button>
            </div>
            {{ form_end(form) }}

        </form>
    </div>
{% endblock %}
   {% block javascripts %}
