
{% extends 'base.html.twig'%}
    {% block head %}
        <meta charset="UTF-8">
        <title>{% block title %}yassine{% endblock %}</title>


    {% endblock %}

{% block body %}
    <div class="text-center">
        <h1> Les listes d un personne</h1>
        </div>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Titre</th>
        <th scope="col">Nom</th>
        <th scope="col">Prenom</th>
        <th scope="col">Email</th>
        <th scope="col">Description</th>
        <th scope="col">Image</th>
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    {% for  person in persons %}
    <tr>
        <td>{{person.id }}</td>
        <td>{{person.titre}}</td>
        <td>{{person.nom}}</td>
        <td>{{person.prenom}}</td>
        <td>{{person.email }}</td>
        <td>{{ person.description }}</td>
        <td><img src="{{asset('uploads/images/'~person.image)}}" style="vertical-align: middle;
  width: 50px;
  height: 50px;
  border-radius: 50%;"></td>
        <td><a href="{{ path('delete_show',{'id':person.id})}}" class="btn btn-primary">Delete</a>
            <a href="{{ path('person_edit',{'id':person.id})}}" class="btn btn-warning">Modifier</a>
        </td>

    </tr>
{% endfor %}
    </tbody>
</table>
{% endblock %}
